# Production Environment Variables for Karedesk Portal

# Database
DATABASE_URL="postgresql://username:password@host:5432/karedesk_prod"

# Authentication
NEXTAUTH_SECRET="your-super-secure-secret-key-for-production"
NEXTAUTH_URL="https://your-domain.com"
JWT_SECRET="your-jwt-secret-key-for-production"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Monitoring (Optional)
SENTRY_DSN="https://your-sentry-dsn"

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_CONTACT_FORM="true"
MAINTENANCE_MODE="false"